<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ws.wolfsoft.creative.FirstActivity"
    tools:showIn="@layout/app_bar_first"
    android:paddingBottom="56dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:src="@drawable/money"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_slide_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/touchable_background_blue"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/text_slide_right"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body"/>

        <TextView
            android:id="@+id/text_slide_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/touchable_background_blue"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/text_slide_bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/text_explode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/touchable_background_blue"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/text_explode"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body"/>

        <TextView
            android:id="@+id/text_explode_bounce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"
            android:background="@drawable/touchable_background_blue"
            android:gravity="center"
            android:padding="16dp"
            android:text="@string/text_explode_bounce"
            android:textColor="@color/white"
            android:textSize="@dimen/text_body"/>

    </LinearLayout>
</LinearLayout>